@model SAPCS.Models.Cliente

@{ ViewData["Title"] = "Create"; }

<h1>Cadastrar novo</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form id="form-criar" asp-action="Create">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-4 form-group">
                    <label required asp-for="NomeCli" class="control-label"></label>
                    <input type="text" asp-for="NomeCli" class="form-control" placeholder="Nome"
                           pattern="^[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" title="Digite um nome." required />
                    <span asp-validation-for="NomeCli" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="TelCli" class="control-label"></label>
                    <input type="tel" minlength="11" asp-for="TelCli" pattern="^(\(\d{2}\) \d{4,5}-\d{4})|(\d{11,12})$" class="form-control phone" placeholder="(88) 88888-8888" title="Número não confere com o padrão." required />
                    <span asp-validation-for="TelCli" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="ValTel" class="control-label"></label>
                    <select asp-for="ValTel" class="form-control">
                        <option value="@EnumValTel.RESIDENCIAL">Residencial</option>
                        <option value="@EnumValTel.COMERCIAL">Comercial</option>
                    </select>
                    <span asp-validation-for="ValTel" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="CPFCli" class="control-label"></label>
                    <input type="text" asp-for="CPFCli" pattern="^(\d{3}\.\d{3}\.\d{3}-\d{2})|(\d{11})$" class="form-control cpf" placeholder="888.888.888-88" title="Digite o cpf corretamente" />
                    <span asp-validation-for="CPFCli" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="EmailCli" class="control-label"></label>
                    <input type="email" asp-for="EmailCli" class="form-control" placeholder="E-mail" title="Formato inválido." />
                    <span asp-validation-for="EmailCli" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="ValEmail" class="control-label"></label>
                    <input asp-for="ValEmail" placeholder="Pessoal/Comercial" class="form-control" />
                    <span asp-validation-for="ValEmail" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="DtNascCli" class="control-label"></label>
                    <input type="date" asp-for="DtNascCli" id="DtNascCli" class="form-control" autocomplete="off" min="1940-01-01" max="2010-12-31" title="Preencha com valor entre os anos 1940 e 2010." />
                    <span asp-validation-for="DtNascCli" class="text-danger"></span>
                </div>
                <div class="form-group pt-3">
                    <input id="submeter" type="submit" value="Criar" class="btn btn-principal" /> |
                    <a class="btn btn-secundario" role="button" asp-action="Index">Voltar para lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Stylesheets{
}

@section Scripts {
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js'></script>
    <script src="~/js/padraoMascaras.js"></script>


    <script>
        $(document).ready(function () {
            $("#form-criar").submit(function () {
                $(".phone").unmask();
                $(".cpf").unmask();
            });
        });
    </script>
}