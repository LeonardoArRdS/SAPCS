@model SAPCS.Models.Seguradora

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Seguradora</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeSegur" class="control-label">Nome</label>
                <input type="text" asp-for="NomeSegur" class="form-control" placeholder="Nome"
                pattern="^[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" title="Digite um nome." required/>
                <span asp-validation-for="NomeSegur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndSegur" class="control-label">Endereço</label>
                <input asp-for="EndSegur" class="form-control"/>
                <span asp-validation-for="EndSegur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelSegur" class="control-label">Telefone</label>
                <input type="tel" minlength="12" asp-for="TelSegur" class="form-control" placeholder="88 888888888"
                pattern="[0-9]{2}[\s][0-9]{5}[0-9]{4}" title="Número não confere com o padrão."/>
                <span asp-validation-for="TelSegur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteSegur" class="control-label">Site</label>
                <input type="url" asp-for="SiteSegur" class="form-control" placeholder="URL"/>
                <span asp-validation-for="SiteSegur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeContSegur" class="control-label">Nome de contato</label>
                <input type="text" asp-for="NomeContSegur" class="form-control"  placeholder="Nome"
                pattern="^[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" title="Digite um nome."/>
                <span asp-validation-for="NomeContSegur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailContSegur" class="control-label">E-mail de contato</label>
                <input type="email" asp-for="EmailContSegur" class="form-control" placeholder="E-mail" title="Formato inválido."/>
                <span asp-validation-for="EmailContSegur" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StatusSegur"/> @Html.DisplayNameFor(model => model.StatusSegur)
                </label>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Criar" class="btn btn-principal"/> |
                <a class="btn btn-secundario" role="button" asp-action="Index">Voltar para lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
