@model SAPCS.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Funcionario</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeFunc" class="control-label">Nome</label>
                <input type="text" asp-for="NomeFunc" class="form-control"  placeholder="Nome"
                pattern="^[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" title="Digite um nome." required/>
                <span asp-validation-for="NomeFunc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelFunc" class="control-label">Telefone</label>
                <input type="tel" minlength="12" asp-for="TelFunc" class="form-control" placeholder="88 888888888"
                pattern="[0-9]{2}[\s][0-9]{5}[0-9]{4}" title="Número não confere com o padrão."/>
                <span asp-validation-for="TelFunc" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Criar" class="btn btn-principal"/> |
                <a class="btn btn-secundario" role="button" asp-action="Index">Voltar para lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
