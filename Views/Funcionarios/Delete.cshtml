@model SAPCS.Models.Funcionario

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir</h1>

<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>Funcionario</h4>
    <hr/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Nome")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeFunc)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayName("Telefone")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelFunc)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-deletar" /> |
        <a class="btn btn-secundario" role="button" asp-action="Index">Voltar para lista</a>
    </form>
</div>
